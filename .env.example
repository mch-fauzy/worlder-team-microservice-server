# Environment Configuration for Development
# Copy this file to .env and modify as needed

# Microservice A (Generator) Configuration
MICROSERVICE_A_PORT=8080
MICROSERVICE_A_HUMIDITY_PORT=8082
MICROSERVICE_A_PRESSURE_PORT=8083
GRPC_SERVER_ADDRESS=microservice-b:50051
SENSOR_TYPE=temperature
GENERATION_FREQUENCY=60s
LOG_LEVEL=info

# Microservice B (Storage) Configuration
MICROSERVICE_B_PORT=8081
GRPC_PORT=50051

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=sensor_data
DB_USER=app_user
DB_PASSWORD=app_password

# Redis Configuration
REDIS_URL=redis:6379

# JWT Configuration
JWT_SECRET=super-secret-jwt-key-change-in-production-environment
JWT_ISSUER=worlder-microservice

# Environment
ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT=100

# JWT Configuration
JWT_EXPIRATION_SECONDS=86400

# Database Connection Pool
MAX_DB_CONNECTIONS=100
MAX_IDLE_CONNECTIONS=10

# Cache Configuration
CACHE_TTL_SECONDS=300

# MySQL Root Password (for Docker)
MYSQL_ROOT_PASSWORD=password

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=worlder-microservices
