# Environment Configuration for Development

# Microservice A (Generator) Configuration
MICROSERVICE_A_PORT=8081
MICROSERVICE_A_TEMPERATURE_PORT=8081
MICROSERVICE_A_HUMIDITY_PORT=8082
MICROSERVICE_A_PRESSURE_PORT=8083
MICROSERVICE_A_LIGHT_PORT=8084
MICROSERVICE_A_MOTION_PORT=8085
SENSOR_TYPE_TEMPERATURE=temperature
SENSOR_TYPE_HUMIDITY=humidity
SENSOR_TYPE_PRESSURE=pressure
SENSOR_TYPE_LIGHT=light
SENSOR_TYPE_MOTION=motion
GENERATION_FREQUENCY=60s
LOG_LEVEL=info

# Microservice B (Storage) Configuration
MICROSERVICE_B_PORT=8080

# gRPC Configuration (shared)
# GRPC_HOST: Points to microservice-b (storage service) where generators send data, check service name in docker-compose.yml
GRPC_HOST=microservice-b
GRPC_PORT=50051

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=sensor_data
DB_USER=app_user
DB_PASSWORD=app_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Environment
ENV=development

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT=100

# JWT Configuration
JWT_ISSUER=microservice-b
JWT_SECRET=super-secret-jwt-key-change-in-production-environment
JWT_EXPIRATION_SECONDS=86400

# Database Connection Pool
MAX_DB_CONNECTIONS=100
MAX_IDLE_CONNECTIONS=10

# Cache Configuration
CACHE_TTL_SECONDS=300
